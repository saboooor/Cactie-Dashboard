<%- include("partials/header", { bot, user, path, title: `${bot.user.username}` }) %>
<%
settings.forEach(async reactionrole => {
  reactionrole.roleName = guild.roles.cache.get(reactionrole.roleId) ? guild.roles.cache.get(reactionrole.roleId).name : 'Could not get role.';
})
%>

<section class="hero is-fullheight is-black">
  <div class="hero-body">
    <div class="container has-text-centered">
      <img class="floating" src="/assets/images/<%= bot.user.username.replace(/ /g, '') %>.webp" style="max-width: 18rem; max-height: 18rem; filter: drop-shadow(0 0 3rem <%= bot.config.colors[1] %>)">
      <p class="title">
        <%= bot.user.username %>
      </p>
      <br>
      <p class="subtitle">
        A bot that does stuff ig<br><br>
        Admin, Fun, Music, Tickets, Utilities, NSFW, Animals, and Actions!
      </p>
      <br>
      <a class="button is-primary is-outlined is-rounded" href="./dashboard" style="margin: 5px">
        <i data-feather="tool"></i>
        Dashboard
      </a>
      <a class="button is-primary is-outlined is-rounded" href="./support/discord" style="margin: 5px">
        <i data-feather="help-circle"></i>
        Support
      </a>
      <br>
      <a class="button is-success is-outlined is-rounded" href="./invite" style="margin: 10px">
        <i data-feather="plus"></i>
        Invite <%= bot.user.username %>!
      </a>
      <br>
      <a class="button is-black is-rounded" href="#why" style="margin: 10px">
        <i data-feather="chevron-down"></i>
        Why use <%= bot.user.username %>?
      </a>
    </div>
  </div>
</section>

<section class="hero is-fullheight is-black">
  <div class="hero-body">
      <div class="container has-text-centered">
          <br><br><br><br>
          <p class="title">
              Why <%= bot.user.username %>?
          </p><br>

          <div class="tile is-ancestor">
              <div class="tile is-parent">
                  <div class="tile is-child box">
                      <p class="subtitle">
                          <i data-feather="zap"></i>
                          <strong>Quick Fixes</strong>
                      </p>
                      <p class="has-text-white">The bot gets every bug fixed at most 2 days after discovery, so the experience stays seamless :)</p>
                  </div>
              </div>
              <div class="tile is-parent">
                  <article class="tile is-child box">
                      <p class="subtitle">
                          <i data-feather="smile"></i>
                          <strong>User-friendly experience</strong>
                      </p>
                      <p class="has-text-white">We strive for fluid user experience, using the bot is aimed at being simple and easy! If you think we could improve, go to the support server and tell us.</p>
                  </article>
              </div>
              <div class="tile is-parent">
                  <div class="tile is-child box">
                    <p class="subtitle">
                        <i data-feather="smartphone"></i>
                        <strong>Bloat-free code</strong>
                    </p>
                    <p class="has-text-white"><%= bot.user.username %> has fast, bloat-free, and efficient code to keep the bot running fluidly fast!</p>
                  </div>
              </div>
          </div>
          <br>
          <br id="why">
      </div>
  </div>
</section>

